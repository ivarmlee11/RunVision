<% if (currentUser) { %>
Welcome, <%- (currentUser.name) %>!
<h2>Map An Activity</h2>
<h4>Place markers on the map and hit the play button.</h4>


  <div id='container'>
    <div id="map">
    </div>
      <div id="onClickHide">
        <button class="btn-group btn-group-sm" role="group" aria-label="..." id="mapRoute">Play Show</button>
        <form action="/runMaps/clientData" method="POST" accept-charset="utf-8" id="pushFormToDB">
            <label>Name this Show</label>
            <input type="text" name="name" required id="textInput">
            <button type="submit" class="btn-group btn-group-sm" role="group" aria-label="..." id="pushRoutesToDB">Save Show</button>
        </form>
      </div>
    <div class="autoplay">
    </div>
  </div>



<script src="/js/app.js" type="text/javascript" charset="utf-8"></script>
<script async defer
    src="https://maps.googleapis.com/maps/api/js?key=AIzaSyCHKEYVYqaOgwp_M3GURu30QKreYxq61bQ&callback=initMap">
</script>


<% } %>
